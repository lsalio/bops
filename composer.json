{
    "name": "wjiec/bops",
    "description": "An phalcon-based secondary development framework",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/wjiec/php-bops",
    "authors": [
        {
            "name": "Jayson Wang",
            "email": "jayson@laboys.org"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-sockets": "*",
        "ext-mbstring": "*",
        "ext-phalcon": "^3.4",
        "wjiec/xet": "^1.0",
        "vlucas/phpdotenv": "^4.1",
        "filp/whoops": "^2.7",
        "league/flysystem": "^1.0 || ^2.0",
        "psr/log": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Bops\\": "src/framework/",
            "Bops\\Provider\\": "src/provider/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "php-amqplib/php-amqplib": "^2.11"
    },
    "suggest": {
        "php-amqplib/php-amqplib": "Allow sending log messages to an AMQP server using php-amqplib"
    }
}
